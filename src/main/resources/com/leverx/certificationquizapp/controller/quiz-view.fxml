<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="15.0" prefWidth="700.0" prefHeight="600.0"
      xmlns:fx="http://javafx.com/fxml"
      stylesheets="@style.css"
      fx:controller="com.leverx.certificationquizapp.controller.QuizController">
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0"/>
    </padding>

    <ScrollPane fx:id="scrollPane" fitToWidth="true" minHeight="150.0" maxHeight="250.0"
                style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: #ddd; -fx-border-radius: 5;">
        <Label fx:id="questionLabel" wrapText="true"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"
               maxWidth="Infinity">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </Label>
    </ScrollPane>

    <Separator />

    <VBox fx:id="optionsContainer" spacing="10.0" VBox.vgrow="ALWAYS">
        <padding>
            <Insets left="10.0" />
        </padding>
    </VBox>

    <Label fx:id="statusLabel" style="-fx-text-fill: #666666;"/>

    <HBox alignment="CENTER" spacing="15.0">
        <Button fx:id="prevBtn" text="Back" onAction="#onPrevClick" prefWidth="100"/>
        <Button fx:id="nextBtn" text="Next" onAction="#onNextClick" prefWidth="100"/>
    </HBox>

    <Button text="ðŸ  Go home" onAction="#onHomeClick"
            style="-fx-background-color: #e0e0e0; -fx-text-fill: #333333;"/>
</VBox>
